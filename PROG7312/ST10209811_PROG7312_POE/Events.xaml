<Window x:Class="ST10209811_PROG7312_POE.Events"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Events" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Upcoming Local Events and Announcements"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#2E7D32"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Search + Events -->
            <StackPanel Grid.Column="0" Orientation="Vertical">

                <!-- Search Panel -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,15">
                    <TextBlock Text="Category:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="CategoryComboBox" Width="150" Margin="0,0,20,0"/>
                    <TextBlock Text="From:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker x:Name="FromDatePicker" Width="140" Margin="0,0,20,0"/>
                    <TextBlock Text="To:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker x:Name="ToDatePicker" Width="140" Margin="0,0,20,0"/>
                    <Button Content="Search Events" Width="120" Height="32" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="SearchButton_Click"/>
                    <Button Content="Show All" Width="100" Height="32" Margin="5,0,0,0" Background="#388E3C" Foreground="White" FontWeight="Bold" Click="ShowAllButton_Click"/>
                </StackPanel>

                <!-- Main Event List -->
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10" Background="White" Margin="0,0,0,15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="250">
                        <ListView x:Name="EventsListView" BorderThickness="0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Event Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                                    <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" Width="150"/>
                                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="120"/>
                                    <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}" Width="150"/>
                                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="200"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Border>

                <!-- Recommendations -->
                <TextBlock Text="Recommended Events" FontSize="16" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,10"/>
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10" Background="#F1F8E9">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="150">
                        <ListView x:Name="RecommendationsListView" BorderThickness="0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Event Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="120"/>
                                    <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" Width="100"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- Right Panel: Recent Events -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="20,0,0,0">
                <TextBlock Text="Recently Added Events" FontSize="16" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,10"/>
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="10" Background="#F1F8E9">
                    <ListView x:Name="RecentEventsListView" BorderThickness="0" Height="450">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Event Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                                <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Footer Back Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Back" Width="120" Height="35" Background="#2E7D32" Foreground="White" FontWeight="Bold" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
