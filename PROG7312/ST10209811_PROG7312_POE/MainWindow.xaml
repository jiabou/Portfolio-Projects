<Window x:Class="ST10209811_PROG7312_POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10209811_PROG7312_POE"
        mc:Ignorable="d"
        Title="RSA Municipality App" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- App Title -->
            <TextBlock Text="RSA Municipality App" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2E7D32" 
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Main Buttons -->
            <Button Content="Report Issue" Height="60" FontSize="16" FontWeight="Bold" Background="#4CAF50" Foreground="White" Click="Button_Click"/>
            <Button Content="Events / Announcements" Height="60" FontSize="16" FontWeight="Bold" Background="#4CAF50" Foreground="White" Click="Button_Click_1"/>
            <Button Content="Service Report Status" Height="60" FontSize="16" FontWeight="Bold" Background="#4CAF50" Foreground="White" Click="Button_Click_2" IsEnabled="False"/>

            <!-- Exit Button -->
            <Button Content="Exit" Height="50" FontSize="14" FontWeight="Bold" Background="#388E3C" Foreground="White" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
