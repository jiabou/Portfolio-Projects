<Window x:Class="ST10209811_PROG7312_POE.ReportIssue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report an Issue" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <!-- Row for Back button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Report an Issue"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#2E7D32"
                   HorizontalAlignment="Center"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,20"/>

        <!-- Left panel: Form fields -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">

            <!-- Location -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="Location:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLocation" Width="300"/>
            </StackPanel>

            <!-- Category -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="Category:" Width="100" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbbCategory" Width="300">
                    <ComboBoxItem Content="Roads"/>
                    <ComboBoxItem Content="Sanitation"/>
                    <ComboBoxItem Content="Utilities"/>
                </ComboBox>
            </StackPanel>

            <!-- File upload -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="Upload File:" Width="100" VerticalAlignment="Center"/>
                <Label x:Name="lblPath" Content="" Width="200" VerticalAlignment="Center"/>
                <Button x:Name="btnFileSelect" Content="Select File" Width="100" Height="28" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="btnFileSelect_Click"/>
            </StackPanel>

            <!-- Issue Details -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                <TextBlock Text="Issue Details:" Margin="0,0,0,5"/>
                <RichTextBox x:Name="rtxtDetails" Height="180" Width="400">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text=""/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </StackPanel>

        </StackPanel>

        <!-- Right panel: Vertical Progress Bar -->
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="20,0,0,0">
            <ProgressBar x:Name="pbCompleted" Width="20" Height="350" Orientation="Vertical" RenderTransformOrigin="0.5,0.5">
                <ProgressBar.RenderTransform>
                    <RotateTransform Angle="180"/>
                </ProgressBar.RenderTransform>
            </ProgressBar>
        </StackPanel>

        <!-- Footer: Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSubmit" Content="Submit" Width="120" Height="35" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="btnSubmit_Click"/>
            <Button x:Name="btnBack" Content="Back" Width="120" Height="35" Background="#2E7D32" Foreground="White" FontWeight="Bold" Click="btnBack_Click"/>
        </StackPanel>

    </Grid>
</Window>
