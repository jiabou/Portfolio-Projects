<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".BudgetMenu">

    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBudgetMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="40dp"
        android:text="Budget Menu"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGraphPage"
        android:layout_width="221dp"
        android:layout_height="80dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="@color/blue"
        android:text="View Graph of Spendings"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMyBudgetPage"
        android:layout_width="221dp"
        android:layout_height="80dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/blue"
        android:text="My Budget Page"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGraphPage" />

    <Button
        android:id="@+id/btnViewBudgetGoals"
        android:layout_width="221dp"
        android:layout_height="80dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/blue"
        android:text="View Budget Goals"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMyBudgetPage" />
</androidx.constraintlayout.widget.ConstraintLayout>